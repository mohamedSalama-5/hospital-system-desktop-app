<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.controller.EditAppointmentController" prefWidth="400" prefHeight="300">
    <children>
        <Label layoutX="20" layoutY="20" text="Patient National ID:"/>
        <TextField fx:id="txtPatientNationalId" layoutX="150" layoutY="20" prefWidth="200" editable="false"/>

        <Label layoutX="20" layoutY="60" text="Clinic Name:"/>
        <TextField fx:id="txtClinicName" layoutX="150" layoutY="60" prefWidth="200"/>

        <Label layoutX="20" layoutY="100" text="Appointment Date:"/>
        <DatePicker fx:id="dpAppointmentDate" layoutX="150" layoutY="100" prefWidth="200"/>

        <Label layoutX="20" layoutY="140" text="Status:"/>
        <TextField fx:id="txtStatus" layoutX="150" layoutY="140" prefWidth="200"/>

        <Button fx:id="btnSave" layoutX="80" layoutY="200" text="Save"/>
        <Button fx:id="btnCancel" layoutX="200" layoutY="200" text="Cancel"/>
    </children>
</AnchorPane>
