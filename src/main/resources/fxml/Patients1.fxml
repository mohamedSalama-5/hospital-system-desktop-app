<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.controller.PatientController"
            prefHeight="600.0" prefWidth="800.0">
    <children>

        <HBox fx:id="HBoxHydrobarPatient" alignment="CENTER_LEFT" prefHeight="75.0" style="-fx-background-color: #1E73BE;"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="LabelHydrobarHospitalManagementSystemPatient" text="Hospital Management System" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <padding>
                        <Insets left="8.0"/>
                    </padding>
                </Label>
            </children>
            <padding>
                <Insets left="20.0"/>
            </padding>
        </HBox>


        <Label fx:id="LabelPatient" text="Patient" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="30.0">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>


        <HBox spacing="10.0" AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <children>
                <TextField fx:id="txtSearchPatient" prefHeight="40.0" promptText="Search Patient" HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 1; -fx-background-color: #ffffff; -fx-border-color: #dadada;">
                    <font><Font name="System Bold" size="12.0" /></font>
                    <padding><Insets left="15.0"/></padding>
                </TextField>
                <Button fx:id="btnSearchPatient" text="Search" prefHeight="40.0" prefWidth="110.0"
                        style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 1; -fx-border-color: #dadada; -fx-background-color: #ffffff;">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
            </children>
        </HBox>

        <TableView fx:id="tablePatient" AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="30.0"
                   AnchorPane.rightAnchor="30.0" AnchorPane.bottomAnchor="100.0">
            <columns>
                <TableColumn fx:id="colIDPatient" text="ID">
                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colFirstNamePatient" text="First Name">
                    <cellValueFactory><PropertyValueFactory property="firstName"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colLastNamePatient" text="Last Name">
                    <cellValueFactory><PropertyValueFactory property="lastName"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colNationalIdPatient" text="National ID">
                    <cellValueFactory><PropertyValueFactory property="nationalId"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colGenderPatient" text="Gender">
                    <cellValueFactory><PropertyValueFactory property="gender"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colPhonePatient" text="Phone">
                    <cellValueFactory><PropertyValueFactory property="phoneNumber"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colAddressPatient" text="Address">
                    <cellValueFactory><PropertyValueFactory property="address"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colBloodTypePatient" text="Blood Type">
                    <cellValueFactory><PropertyValueFactory property="bloodType"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colAdmissionDatePatient" text="Admission Date">
                    <cellValueFactory><PropertyValueFactory property="admissionDate"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colDischargeDatePatient" text="Discharge Date">
                    <cellValueFactory><PropertyValueFactory property="dischargeDate"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colRoomIdPatient" text="Room">
                    <cellValueFactory><PropertyValueFactory property="roomId"/></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>


        <HBox fx:id="HBoxButton" alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="15.0"
              AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <children>
                <Button fx:id="btnAddPatient" text="Add" prefHeight="40.0" prefWidth="110.0"
                        style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 1; -fx-border-color: #dadada; -fx-background-color: #ffffff;">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button fx:id="btnEditPatient" text="Edit" prefHeight="40.0" prefWidth="110.0"
                        style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 1; -fx-border-color: #dadada; -fx-background-color: #ffffff;">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button fx:id="btnDeletePatient" text="Delete" prefHeight="40.0" prefWidth="110.0"
                        style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 1; -fx-border-color: #dadada; -fx-background-color: #ffffff;">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button fx:id="btnBackPatient" text="Back" prefHeight="40.0" prefWidth="110.0"
                        style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 1; -fx-border-color: #dadada; -fx-background-color: #ffffff;">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
            </children>
        </HBox>

    </children>
</AnchorPane>
